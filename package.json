{
  "name": "automatedagilev1",
  "version": "1.0.0",
  "description": "AI-driven agile development pipeline with specialized branch workflows",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:docker",
    "build:docker": "docker build -f deployment/docker/Dockerfile -t automatedagile:latest .",
    "deploy": "deployment/scripts/deploy.sh",
    "deploy:dev": "deployment/scripts/deploy.sh --environment dev --mode docker",
    "deploy:staging": "deployment/scripts/deploy.sh --environment staging --mode docker",
    "deploy:prod": "deployment/scripts/deploy.sh --environment prod --mode docker",
    "deploy:local": "deployment/scripts/deploy.sh --environment dev --mode local",
    "validate": "deployment/scripts/deploy.sh --validate-only",
    "test": "jest",
    "lint": "eslint . --ext .js,.json",
    "clean": "deployment/scripts/deploy.sh --clean",
    "branches:setup": "setup/setup-branches.sh",
    "branches:list": "git branch -a | grep -E '(discovery|integration|modules|context)' | sort",
    "health": "curl -f http://localhost:3000/health || echo 'Service not running'"
  },
  "keywords": [
    "ai-driven",
    "agile",
    "development",
    "pipeline",
    "automation",
    "branches",
    "cursor",
    "specialized-workflows"
  ],
  "author": "AutomatedAgilev1 Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "simple-git": "^3.19.1",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "eslint": "^8.56.0",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Jita81/AutomatedAgilev1.git"
  },
  "bugs": {
    "url": "https://github.com/Jita81/AutomatedAgilev1/issues"
  },
  "homepage": "https://github.com/Jita81/AutomatedAgilev1#readme"
}